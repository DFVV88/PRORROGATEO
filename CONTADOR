<body>
  <div class="container">
    <h1>Calculadora de Días de Clase</h1>

    <label for="inicio">Fecha de inicio:</label>
    <input type="date" id="inicio">

    <label for="fin">Fecha de fin:</label>
    <input type="date" id="fin">

    <button onclick="calcularDias()">Calcular días de clase</button>

    <div id="mensajeError" class="error"></div>
    <div id="resultado" class="resultado" style="display:none;"></div>
  </div>

  <script>
    function calcularDias() {
      const inicioInput = document.getElementById('inicio').value;
      const finInput = document.getElementById('fin').value;
      const mensajeError = document.getElementById('mensajeError');
      const resultadoDiv = document.getElementById('resultado');

      mensajeError.textContent = '';
      resultadoDiv.style.display = 'none';
      resultadoDiv.textContent = '';

      if (!inicioInput || !finInput) {
        mensajeError.textContent = 'Por favor, ingresa ambas fechas.';
        return;
      }

      const inicio = new Date(inicioInput);
      const fin = new Date(finInput);

      if (fin < inicio) {
        mensajeError.textContent = 'La fecha final no puede ser anterior a la fecha de inicio.';
        return;
      }

      let diasClase = 0;
      let fechaActual = new Date(inicio);

      while (fechaActual <= fin) {
        const diaSemana = fechaActual.getDay(); // 0=Domingo, 1=Lunes, ..., 6=Sábado
        if (diaSemana !== 0) { // Excluimos únicamente los domingos
          diasClase++;
        }
        fechaActual.setDate(fechaActual.getDate() + 1);
      }

      resultadoDiv.style.display = 'block';
      resultadoDiv.textContent = `Entre el ${inicioInput} y el ${finInput} hay ${diasClase} días de clase (lunes a sábado).`;
    }
  </script>
</body>
</html>
